FROM python:2.7.13

RUN curl -sL https://deb.nodesource.com/setup_8.x | bash - \
	&& apt-get install -y nodejs
RUN npm install -g AugurProject/solium

RUN wget --quiet --output-document /usr/local/bin/solc https://github.com/ethereum/solidity/releases/download/v0.4.16/solc-static-linux \
	&& chmod a+x /usr/local/bin/solc

ENV PYTHONUNBUFFERED=1

# install dependencies
COPY requirements.txt /app/requirements.txt
RUN cd /app \
	&& pip install --upgrade pip setuptools \
	&& pip install -r requirements.txt

COPY .soliumignore /app/.soliumignore
COPY .soliumrc.json /app/.soliumrc.json
COPY src/ /app/src/
COPY tests/ /app/tests/

WORKDIR /app

ENTRYPOINT [ "pytest", "tests", "-vv" ]
